<div class="content">
  <h1>Books</h1>

  <div class="books-table">
    <table>
      <thead>
        <tr>
          <td>Title</td>
          <td>Opinion</td>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |b| %>
          <tr>
            <td><%= link_to b.title, book_path(b)  %></td>
            <td><%= b.body %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="book-new">
    <h1>New book</h1>
    <%= render 'form' %>
  </div>

</div>